# Example .env for Cortex
# Copy this file to .env and fill in real values.

# Database
# For SQLite use: "sqlite:./dev.db"
DATABASE_URL="sqlite:./dev.db"

# Better Auth (used by `src/lib/auth.ts`)
# Set the base URL for BetterAuth (can be NEXT_PUBLIC_BETTER_AUTH_URL for client use)
BETTER_AUTH_URL=http://localhost:3099
NEXT_PUBLIC_BETTER_AUTH_URL=http://localhost:3099

# Next.js / App
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=replace_with_a_secure_random_value
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Server
PORT=3000
NODE_ENV=development

# Tambo (used in `src/app/dashboard/layout.tsx`)
TAMBO_API_KEY=your_tambo_api_key_here

# OAuth credentials (used by `src/lib/auth.ts` socialProviders)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Example public API key (optional)
NEXT_PUBLIC_API_KEY=your_public_api_key_here

jhh
