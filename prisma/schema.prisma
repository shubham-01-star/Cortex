generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id
  name          String
  email         String    @unique
  emailVerified Boolean
  image         String?
  createdAt     DateTime
  updatedAt     DateTime
  role          String?   @default("user")
  initRole      String?
  permissions   String[]  @default([])
  banned        Boolean?  @default(false)
  banReason     String?
  banExpires    DateTime?
  
  accounts      Account[]
  sessions      Session[]
  dbConfigs     DbConfig[]
  invitedById   String?

  @@map("user")
}

model Session {
  id             String   @id
  expiresAt      DateTime
  token          String   @unique
  createdAt      DateTime
  updatedAt      DateTime
  ipAddress      String?
  userAgent      String?
  userId         String
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  impersonatedBy String?

  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime

  @@map("account")
}

model Verification {
  id         String    @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verification")
}

model DbConfig {
  id                     String     @id @default(uuid())
  userId                 String
  connectionString       String
  maskedConnectionString String
  provider               DbProvider
  isActive               Boolean    @default(true)
  createdAt              DateTime   @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("db_config")
}

enum DbProvider {
  postgresql
  mysql
}

model Invitation {
  id          String   @id @default(uuid())
  email       String
  name        String?
  role        String
  permissions String[] @default([])
  token       String   @unique
  status      String   @default("pending")
  inviterId   String?
  createdAt   DateTime @default(now())

  @@map("invitations")
}
